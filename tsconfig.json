{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": ["./packages/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
 }